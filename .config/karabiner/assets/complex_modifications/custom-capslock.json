{
  "title": "Change caps_lock to Esc and Control",
  "rules": [
    {
      "description": "Post Esc if Caps is tapped, Control if held.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock"
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    }
  ],
  "parameters": {
    "basic.to_if_alone_timeout_milliseconds": 500
  }
}
